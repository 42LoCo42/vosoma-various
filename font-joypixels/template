# Template file for 'font-joypixels'
pkgname=font-joypixels
version=6.5.0
revision=1
short_desc="Emoji as a Service (formerly EmojiOne)"
maintainer="42LoCo42 <leonsch@protonmail.com>"
license="custom"
homepage="https://www.joypixels.com"
distfiles="https://cdn.joypixels.com/arch-linux/font/${version}/joypixels-android.ttf
https://cdn.joypixels.com/arch-linux/license/free-license.pdf
https://cdn.joypixels.com/arch-linux/appendix/joypixels-license-appendix.pdf"
checksum="06596a2dad8c8f540dc8f3c838ca54f6d8f7847238c9a261f7eadb0531f8d0ec
f98c05ac7ea2ee47468f7a43816205bbf2bd614898cf0e431554de6ad48a4526
05084e4ddbbb0c241bb0ff4e307853a9e6236fa1c617b7cba44af31b6bfc5e2d"
skip_extraction="joypixels-android.ttf
free-license.pdf
joypixels-license-appendix.pdf"
create_wrksrc=yes

do_install() {
	cd "$XBPS_SRCDISTDIR/$pkgname-$version"
	install -Dm644 "joypixels-android.ttf" "$DESTDIR/usr/share/fonts/${pkgname#font-}/JoyPixels.ttf"
	install -Dm644 "license-free.pdf" "$DESTDIR/usr/share/licenses/${pkgname#font-}/LICENSE.pdf"
	install -Dm644 "license-appendix.pdf" "$DESTDIR/usr/share/licenses/${pkgname#font-}/LICENSE.appendix.pdf"
}
